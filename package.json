    "nestjs-typeorm-paginate": "^4.0.4",
    "nodemailer": "^6.9.8",
    "npm-check-updates": "^16.14.12",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
